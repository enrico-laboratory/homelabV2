services:
  app:
    image: jc21/nginx-proxy-manager:latest
    container_name: npm
    restart: unless-stopped
    ports:
      - "80:80"
      - "81:81"     # admin panel
      - "443:443"
    volumes:
      - ./{{ data_folder_path }}:/data
      - ./{{ letsencrypt_folder_path }}:/etc/letsencrypt
