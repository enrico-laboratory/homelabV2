alerting:
  telegram:
    token: "{{ telegram_bot_token }}"
    id: "{{ telegram_chat_id }}"

storage:
  type: sqlite
  path: "/data/gatus.db"
endpoints:
  - name: enricoruggieri.com
    group: "external"
    url: https://enricoruggieri.com
    interval: 30s
    conditions:
      - "[STATUS] == 200"
    alerts:
      - type: telegram
        send-on-resolved: true

  - name: dns
    group: "servers"
    url: ssh://pihole.enricoruggieri.com:22
    conditions:
      - "[CONNECTED] == true"
    alerts:
      - type: telegram
        send-on-resolved: true

  - name: vpn
    group: "servers"
    url: ssh://vpn.enricoruggieri.com:22
    conditions:
      - "[CONNECTED] == true"
    alerts:
      - type: telegram
        send-on-resolved: true

  - name: ops
    group: "servers"
    url: ssh://ops.enricoruggieri.com:22
    conditions:
      - "[CONNECTED] == true"
    alerts:
      - type: telegram
        send-on-resolved: true

