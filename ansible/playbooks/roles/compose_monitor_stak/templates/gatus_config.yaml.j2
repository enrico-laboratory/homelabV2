alerting:
  telegram:
    token: "{{ telegram_bot_token }}"
    id: "{{ telegram_chat_id }}"
    topic-id: "7"

endpoints:
  - name: enricoruggieri.com
    url: https://enricoruggieri.com
    interval: 30s
    conditions:
      - "[STATUS] == 200"
    alerts:
      - type: telegram
        send-on-resolved: true

  - name: 192.168.100.78
    target: ssh://192.168.100.78:22
    conditions:
      - "[CONNECTED] == true"
    alerts:
      - type: telegram
        send-on-resolved: true

  - name: 192.168.100.79
    target: ssh://192.168.100.79:22
    conditions:
      - "[ CONNECTED ] == true"
    alerts:
      - type: telegram
        send-on-resolved: true

  - name: 192.168.100.80
    target: ssh://192.168.100.80:22
    conditions:
      - "[ CONNECTED ] == true"
    alerts:
      - type: telegram
        send-on-resolved: true
